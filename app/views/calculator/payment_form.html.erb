<!-- app/views/calculator/payment_form.html.erb -->
<%= form_tag('/payment/results') do %>
    <div>
      <label for="apr_input">APR</label>
      <%= text_field_tag(:user_apr, nil, placeholder: 'E.g. 5.42', id: 'apr_input') %>
    </div>

    <div>
      <label for="years_input">Number of years</label>
      <%= text_field_tag(:user_years, nil, placeholder: 'How many years to repay?', id: 'years_input') %>
    </div>

    <div>
      <label for="principal_input">Principal</label>
      <%= text_field_tag(:user_pv, nil, placeholder: 'How much principal?', id: 'principal_input') %>
    </div>

    <%= submit_tag('Calculate monthly payment') %>
  <% end %>
</body>
</html>

<% if @result %>
  <p><%= @result %></p>
<% end %>

<!-- Link back to the homepage -->
<p><%= link_to 'Back to Homepage', root_path %></p>
