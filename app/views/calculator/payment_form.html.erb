<!-- app/views/calculator/payment_form.html.erb -->
<h1>Omnicalc-1 - Payment</h1>
<%= form_tag('/payment') do %>
  <div>
    <label for="apr">APR (annual percentage rate):</label>
    <%= text_field_tag(:apr) %>
  </div>
  <div>
    <label for="years">Number of years remaining:</label>
    <%= text_field_tag(:years) %>
  </div>
  <div>
    <label for="present_value">Present value:</label>
    <%= text_field_tag(:present_value) %>
  </div>
  <%= submit_tag('Calculate Monthly Payment') %>
<% end %>

<% if @result %>
  <p><%= @result %></p>
<% end %>

<!-- Link back to the homepage -->
<p><%= link_to 'Back to Homepage', root_path %></p>
